<br>

<%= form_for @user do |u| %>
	<%= u.label :email %>
	<%= u.email_field :email %><br>
	<%= u.label :password %>
	<%= u.password_field :password %><br>
	<%= u.label :password_confirmation %>
	<%= u.password_field :password_confirmation %><br>
	<%= u.submit %>
<% end %>

<br>

<% if @user.errors.full_messages.any? %>
	<ul>
		<% @user.errors.full_messages.each do |error_message| %>
			<li><%= error_message%></li> <br />
			<% end %> 
	</ul>
<% end %>
